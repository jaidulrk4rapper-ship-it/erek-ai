# Auth (NextAuth) — required for login/signup
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Optional: Google OAuth (get from Google Cloud Console)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Optional: GitHub OAuth (get from GitHub Developer Settings)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Groq (free API — no local server needed)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TIMEOUT_MS=20000

# Optional n8n
N8N_WEBHOOK_URL=http://localhost:5678/webhook/erek
N8N_TIMEOUT_MS=8000
